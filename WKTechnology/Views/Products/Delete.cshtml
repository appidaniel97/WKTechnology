@model WKTechnology.Models.Products

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Deseja excluir o produto atual?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ncm)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ncm)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceCost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceCost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceSale)
        </dt>
        <dd class = "col-sm-10">
